<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorControlActivated">@color/sub_color</item>
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="NavigationDrawerHeaderMainText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationDrawerHeaderSubText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@color/navigation_drawer_header_sub_text</item>
    </style>

    <style name="TextListMainItem">
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TextListSubItem">
        <item name="android:textSize">@dimen/text_sub_size</item>
        <item name="android:textColor">@color/sub_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
